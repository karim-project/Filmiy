@model Filmiy.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
    var categories = ViewBag.Categories as IEnumerable<Filmiy.Models.Category>;
    var cinemas = ViewBag.Cinemas as IEnumerable<Filmiy.Models.Cinema>;
    var actors = ViewBag.Actors as IEnumerable<Filmiy.Models.Actor>;
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Edit Movie</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <!-- Movie Name -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Movie Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        </div>

        <!-- Price -->
        <div class="mb-3">
            <label asp-for="Price" class="form-label">Ticket Price</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
        </div>

        <!-- Status -->
        <div class="mb-3">
            <label asp-for="Status" class="form-label">Status</label>
            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<MovieStatus>()"></select>
        </div>

        <!-- Release Date -->
        <div class="mb-3">
            <label asp-for="DateTime" class="form-label">Release Date</label>
            <input asp-for="DateTime" type="datetime-local" class="form-control" />
        </div>

        <!-- Category -->
        <div class="mb-3">
            <label class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-select">
                <option value="">-- Select Category --</option>
                @foreach (var item in categories!)
                {
                    <option value="@item.Id" selected="@(item.Id == Model.CategoryId)">
                        @item.Name
                    </option>
                }
            </select>
        </div>

        <!-- Cinema -->
        <div class="mb-3">
            <label class="form-label">Cinema</label>
            <select asp-for="CinemaId" class="form-select">
                <option value="">-- Select Cinema --</option>
                @foreach (var item in cinemas!)
                {
                    <option value="@item.Id" selected="@(item.Id == Model.CinemaId)">
                        @item.Name
                    </option>
                }
            </select>
        </div>

        <!-- Actors -->
        <div class="mb-3">
            <label class="form-label">Actors</label>
            <select name="actorIds" class="form-select" multiple size="5">
                @foreach (var item in actors!)
                {
                    var isSelected = Model.movieActors.Any(a => a.ActorId == item.Id);
                    <option value="@item.Id" selected="@isSelected">@item.Name</option>
                }
            </select>
        </div>

        <!-- Main Image -->
        <div class="mb-3">
            <label class="form-label">Main Image</label>
            <input type="file" name="MainImg" class="form-control" />
            @if (!string.IsNullOrEmpty(Model.MainImg))
            {
                <img src="~/Images/movies/main/@Model.MainImg" alt="Main Image" class="img-thumbnail mt-2" width="150" />
            }
        </div>

        <!-- Sub Images -->
        <div class="mb-3">
            <label class="form-label">Sub Images</label>
            <input type="file" name="subImgs" class="form-control" multiple />
            @if (Model.SubImages != null && Model.SubImages.Any())
            {
                <div class="d-flex flex-wrap mt-2">
                    @foreach (var img in Model.SubImages)
                    {
                        <img src="~/Images/movies/sub/@img.Img" alt="Sub Image" class="img-thumbnail me-2 mb-2" width="100" />
                    }
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
