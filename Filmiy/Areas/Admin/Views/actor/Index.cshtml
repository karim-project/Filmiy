@model IEnumerable<Filmiy.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Actors</h2>
        <a asp-action="Create" class="btn btn-primary">Add New Actor</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No actors found.</div>
    }
    else
    {
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Bio</th>
                    <th>Image</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@(item.Bio?.Length > 60 ? item.Bio.Substring(0, 60) + "..." : item.Bio)</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Image))
                            {
                                <img src="~/Images/actors/@item.Image" alt="@item.Name" width="80" height="80" class="rounded shadow-sm" />
                            }
                            else
                            {
                                <span class="text-muted">No Image</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                            <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete(@item.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="row">
    <nav aria-label="Page navigation example" style="justify-content: center; display: flex;">
        <ul class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (var i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You are about to delete this actor permanently.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Admin/Actor/Delete/' + id;
                }
            });
        }
    </script>
}
